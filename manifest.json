{
    "name": ".torrent to Transmission",
    "description": "Automagically add, access and control torrents with Firfox.",
    "version": "1.0.4",
    "manifest_version": 2,
    "permissions": [
        "contextMenus",
        "notifications",
        "http://*/"
    ],
    "background": {
        "page": "html/background.html"
    },
    "options_page": "html/options.html",
    "options_ui": {
        "page": "html/options.html"
    },
    "icons": {
        "16": "img/icon-bitty.png",
        "48": "img/icon-small.png",
        "128": "img/icon-large.png"
    },
    "browser_action": {
        "default_icon": "img/icon-bitty.png",
        "default_title": ".torrent to Transmission",
        "default_popup": "html/list.html"
    },
    "web_accessible_resources": [
        "img/icon-large.png"
    ],
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/zid99825/.torrent-to-Transmission-for-Firefox/refs/heads/main/update.json"
        }
    }
}